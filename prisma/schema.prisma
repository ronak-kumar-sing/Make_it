// Prisma Schema for StudyStreak Platform
// Optimized for MongoDB with proper indexing

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ==================== USER MANAGEMENT ====================

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?
  image         String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Study Stats
  currentStreak    Int @default(0)
  longestStreak    Int @default(0)
  totalStudyTime   Int @default(0) // in minutes
  totalTasks       Int @default(0)
  completedTasks   Int @default(0)
  experiencePoints Int @default(0)
  level            Int @default(1)

  // Relations
  accounts        Account[]
  sessions        Session[]
  tasks           Task[]
  focusSessions   FocusSession[]
  challenges      ChallengeParticipant[]
  achievements    UserAchievement[]
  friendsAsUser   Friendship[]           @relation("UserFriends")
  friendsAsFriend Friendship[]           @relation("FriendOfUser")
  aiConversations AIConversation[]
  preferences     UserPreference?
  analytics       UserAnalytics[]

  @@index([createdAt])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
}

// ==================== STUDY FEATURES ====================

model Task {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String?
  status        TaskStatus @default(PENDING)
  priority      Priority   @default(MEDIUM)
  dueDate       DateTime?
  estimatedTime Int? // in minutes
  actualTime    Int? // in minutes
  tags          String[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  completedAt   DateTime?

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  focusSessions FocusSession[]

  @@index([userId])
  @@index([status])
  @@index([dueDate])
  @@index([createdAt])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model FocusSession {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  startTime DateTime    @default(now())
  endTime   DateTime?
  duration  Int? // in minutes
  type      SessionType @default(POMODORO)
  completed Boolean     @default(false)
  notes     String?

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  taskId String? @db.ObjectId
  task   Task?   @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([startTime])
}

enum SessionType {
  POMODORO
  DEEP_WORK
  CUSTOM
}

// ==================== SOCIAL FEATURES ====================

model Challenge {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  type        ChallengeType
  goal        Int // target value
  unit        String // "minutes", "tasks", "streak"
  startDate   DateTime
  endDate     DateTime
  isPublic    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  creatorId   String

  participants ChallengeParticipant[]

  @@index([startDate])
  @@index([endDate])
  @@index([isPublic])
}

enum ChallengeType {
  STUDY_TIME
  TASK_COMPLETION
  STREAK
  CUSTOM
}

model ChallengeParticipant {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  progress    Int       @default(0)
  joinedAt    DateTime  @default(now())
  completedAt DateTime?

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  challengeId String    @db.ObjectId
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([userId, challengeId])
  @@index([userId])
  @@index([challengeId])
}

model Friendship {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  status    FriendshipStatus @default(PENDING)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  userId String @db.ObjectId
  user   User   @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)

  friendId String @db.ObjectId
  friend   User   @relation("FriendOfUser", fields: [friendId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

// ==================== GAMIFICATION ====================

model Achievement {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  name        String              @unique
  description String
  icon        String
  category    AchievementCategory
  requirement Int // value needed to unlock
  xpReward    Int                 @default(100)

  users UserAchievement[]
}

enum AchievementCategory {
  STREAK
  STUDY_TIME
  TASKS
  SOCIAL
  SPECIAL
}

model UserAchievement {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  unlockedAt DateTime @default(now())

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  achievementId String      @db.ObjectId
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

// ==================== AI FEATURES ====================

model AIConversation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  messages AIMessage[]

  @@index([userId])
  @@index([createdAt])
}

model AIMessage {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  role      MessageRole
  content   String
  metadata  Json?
  createdAt DateTime    @default(now())

  conversationId String         @db.ObjectId
  conversation   AIConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// ==================== ANALYTICS & PREFERENCES ====================

model UserPreference {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  theme                String  @default("system")
  focusDuration        Int     @default(25) // default pomodoro
  shortBreakDuration   Int     @default(5)
  longBreakDuration    Int     @default(15)
  dailyGoal            Int     @default(120) // minutes
  notificationsEnabled Boolean @default(true)
  soundEnabled         Boolean @default(true)
  reducedMotion        Boolean @default(false)
  aiPersonalization    Boolean @default(true)

  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserAnalytics {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  date           DateTime
  studyMinutes   Int      @default(0)
  tasksCompleted Int      @default(0)
  focusSessions  Int      @default(0)
  streakDay      Boolean  @default(false)

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

// ==================== SYSTEM ====================

model RateLimit {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  key    String   @unique
  points Int      @default(0)
  expire DateTime

  @@index([expire])
}

model SystemLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  level     LogLevel
  message   String
  metadata  Json?
  source    String?
  createdAt DateTime @default(now())

  @@index([level])
  @@index([createdAt])
  @@index([source])
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
  CRITICAL
}
